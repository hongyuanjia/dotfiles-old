[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
width = 100%
height = 30
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = DejaVu Sans:pixelsize=10;0
font-1 = DejaVuSansMono Nerd Font:pixelsize=10;0
font-2 = Font Awesome 5 Free Regular:pixelsize=14;0
font-3 = Font Awesome 5 Brands:pixelsize=14;0

modules-left = i3
modules-center = xwindow
modules-right = cpu memory filesystem temperature alsa wlan date

tray-position = right
tray-padding = 2

enable-ipc = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%
format = <label>
format-underline= ${colors.primary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home

label-mounted = ÔÇ† %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-mounted-foreground = ${colors.foreground}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}
label-mounted-underline= ${colors.primary}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>

ws-icon-0 = 0;‚ôö
ws-icon-1 = 1;ÔÑ†
ws-icon-2 = 2;ÔÄ∂
ws-icon-3 = 3;Ôâ®
ws-icon-4 = 4;Ôáó
ws-icon-5 = 5;ÔÖÑ
ws-icon-default = ÔÜá

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index% %icon%
label-focused-background = #817333
label-focused-underline= ${colors.primary}
label-focused-padding = 10

; unfocused = Inactive workspace on any monitor
label-unfocused = %index% %icon%
label-unfocused-background = ${colors.background-alt}
label-unfocused-underline= ${colors.background-alt}
label-unfocused-padding = 10

; visible = Active workspace on unfocused monitor
label-visible = %index% %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index% %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 10

; Separator in between workspaces
label-separator = ‚ùö

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "Ôãõ "
format-prefix-foreground = ${colors.foreground}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ÔÄà "
format-prefix-foreground = ${colors.foreground}
format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
